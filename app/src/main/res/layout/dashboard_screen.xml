<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Guidelines for horizontal and vertical spacing -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <!-- Teams Button -->
    <Button
        android:id="@+id/teams_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Teams"
        android:backgroundTint="@color/colorAccent1"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/guideline_horizontal_center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/equipment_button" />

    <!-- Projects Button -->
    <Button
        android:id="@+id/projects_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Projects"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideline_horizontal_center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/order_items_button" />

    <!-- Equipment Button -->
    <Button
        android:id="@+id/equipment_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Equipment"
        android:backgroundTint="@color/colorAccent2"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/guideline_horizontal_center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teams_button"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Order Items Button -->
    <Button
        android:id="@+id/order_items_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Order Items"
        android:backgroundTint="@color/colorSecondary"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideline_horizontal_center"
        app:layout_constraintTop_toBottomOf="@+id/projects_button"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- ... (Other buttons with similar constraints) ... -->

</androidx.constraintlayout.widget.ConstraintLayout>