<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/projectIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/conicon"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/project_icon_desc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Project"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal"
        tools:text="New Project" />

    <EditText
        android:id="@+id/projectNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:inputType="text"
        android:minHeight="48dp"
        android:contentDescription="@string/project_name_hint" />

    <EditText
        android:id="@+id/projectAddressEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:inputType="textPostalAddress"
        android:minHeight="48dp"
        android:contentDescription="@string/project_address_hint" />

    <EditText
        android:id="@+id/projectClientEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Client"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:contentDescription="@string/project_client_hint" />

</LinearLayout>